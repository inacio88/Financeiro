@page "/lancamentos/novo"
@inherits CreateTransactionPage

<PageTitle>Histórico lançamentos</PageTitle>
<MudText Typo="Typo.h3"> Novo lançamento</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="InpupModel" OnSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudTextField Label="Título" 
                      HelperText="Obrigatório"
                      @bind-Value="InpupModel.Title"
                      For="() => InpupModel.Title" />

        <MudTextField Label="Quanto?"
                      T="decimal"
                      Format="C"
                      Variant="Variant.Text"
                      HelperText="Informe o valor que será pago ou recebido"
                      @bind-Value="InpupModel.Amount"
                      For="() => InpupModel.Amount" />
    </EditForm>

</MudPaper>